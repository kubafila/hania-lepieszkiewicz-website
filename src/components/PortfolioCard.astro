---
import {Image} from 'astro:assets';
const {image, title, slug} = Astro.props
---
<style lang="scss">
    .card {
        display: flex;
        flex-direction: column;
        align-items: center;
        justify-content: center;
        color: #000;
        text-decoration: none;
        text-align: center;
        width: 100%;
        height: 100%;
        min-height: 400px;
        border: 1px solid #E1E1E1;
        border-radius: 12px;
        overflow: hidden;
        @media screen and (min-width: 768px) {
            &:hover{
                .card__image{
                    transform: scale(1.1);
                }
            }

        }

        &__image{
                transform: scale(1);
            transition: transform 200ms ease-in-out;
            border-radius: 12px;
                width: 100%;
                height: 100%;
                object-fit: cover;
        }
    }


</style>
<a href={`/portfolio/${slug}`} class="card">
    <Image src={image} alt={title} class="card__image" transition:name={slug}/>
</a>