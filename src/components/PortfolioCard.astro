---
import {Image} from 'astro:assets';
const {image, title, slug} = Astro.props
---
<style lang="scss">
    .card {
        scroll-margin-top: 24px;
        display: flex;
        flex-direction: column;
        align-items: center;
        justify-content: center;
        color: #000;
        text-decoration: none;
        text-align: center;
        width: 100%;
        height: 100%;
        min-height: 400px;
        border: 1px solid #E1E1E1;
        border-radius: 12px;
        overflow: hidden;
            box-shadow: 0 0 rgba(0.0.0.0);
            transition:  box-shadow 200ms cubic-bezier(.25,.8,.25,1);


        @media screen and (min-width: 768px) {
            &:hover{
                box-shadow: 0 14px 28px rgba(0,0,0,0.25), 0 10px 10px rgba(0,0,0,0.22);

                .card__image{
                    transform: scale(1.05);
                }
            }

        }

        &__image{
                transform: scale(1);
            transition: transform 200ms ease-in-out;
            border-radius: 12px;
                width: 100%;
                height: 100%;
                object-fit: cover;
        }
    }


</style>
<a href={`/portfolio/${slug}`} class="card"  id={slug}>
    <Image src={image} alt={title} class="card__image" transition:name={slug} width="512" height="800"/>
</a>