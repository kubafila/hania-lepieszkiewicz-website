---
import {Image} from 'astro:assets';
import {ClientRouter} from "astro:transitions";
import '../styles/reset.css'
import '../styles/global.css'
import '@fontsource-variable/plus-jakarta-sans';
import '@fontsource/fira-sans';
import Portfolio from '../assets/portfolio.svg'
import About from '../assets/omnie.svg'
import Ofert from '../assets/oferta.svg'
import Contact from '../assets/kontakt.svg'

const currentPath = Astro.url.pathname;
---
<style is:global>
    .menu__link--active svg .cls-1 {
        fill: var(--color-orange)
    }
</style>
<style lang="scss">
  * {
    padding: 0;
    margin: 0;
    box-sizing: border-box;
  }

  body {
    width: 100vw;
    height: auto;
    min-height: 100vh;

  }

  .page-wrapper {
    width: 100%;
    max-width: 1440px;
    display: flex;
    margin: 64px auto;
      padding: 20px;

    gap: 96px;
    flex-direction: column;
    @media screen and (min-width: 768px) {
      flex-direction: row;
    }

  }

  .menu {
      width: 100%;
    margin-top: 16px;
    @media screen and (min-width: 768px) {
      height: 100vh;
        width: 256px;

    }
    align-items: center;
    display: flex;
    flex-direction: column;
    gap: 64px;


  }

  main {
    flex: 1;
    width: 100%;
  }

</style>

<html lang="pl" transition:name="root" transition:animate="none">
<head>
    <meta charset="utf-8"/>
    <link rel="icon" type="image/svg+xml" href="/favicon.svg"/>
    <meta name="viewport" content="width=device-width"/>
    <meta name="generator" content={Astro.generator}/>
    <title>Hania Lepieszkiewicz - Portfolio</title>
    <ClientRouter/>
</head>
<body>
<div class="page-wrapper">
    <nav class="menu">
        <a href="/portfolio" class={`menu__link ${currentPath.includes('/portfolio') ? 'menu__link--active' : ''}`}>
           <Portfolio/>
        </a>
        <a href="/o-mnie" class={`menu__link ${currentPath.includes('/o-mnie') ? 'menu__link--active' : ''}`}>
            <About />
        </a>
        <a href="/oferta" class={`menu__link ${currentPath.includes('/oferta') ? 'menu__link--active' : ''}`}>
            <Ofert />
        </a>
        <a href="/kontakt" class={`menu__link ${currentPath.includes('/kontakt') ? 'menu__link--active' : ''}`}>
            <Contact />
        </a>
    </nav>
    <main transition:name="body" transition:animate="fade">
        <slot/>
    </main>
</div>
</body>
</html>
