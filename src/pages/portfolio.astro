---
import Layout from "../layouts/Layout.astro";
import { Image } from 'astro:assets';
import heroImg from "../assets/Na_Główna_.png"
---
<style lang="scss">
    .wrapper{
        height: 100vh;
        display: grid;
        place-items: center;
        width: 100%;
    }
    .hero-img{
        height: auto;
        width: 100%;
        object-fit: contain;
    }

    .card{
        display: flex;
        flex-direction: column;
        width: 400px;
        color: #000;
        text-decoration: none;
        text-align: center;
    }
</style>
<Layout>

    <h1>Portfolio</h1>

    <a href="/obrazek-1" class="card">
        <h2 >Obrazek 1</h2>
        <Image transition:name="hero" src={heroImg} alt="Portert Hani" class="hero-img"/>
    </a>

</Layout>