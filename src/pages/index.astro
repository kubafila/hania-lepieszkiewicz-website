---
import Layout from "../layouts/Layout.astro";
import { Image } from 'astro:assets';
import heroImg from "../assets/Na_Główna_.png"
---
<style lang="scss">
	body{
		overflow: hidden;
	}
	.wrapper{
		width: 100%;
		display: grid;
		place-items: center;
	}
	.hero-img{
		height: auto;
		width: 100%;
		object-fit: contain;
		max-width: 554px;
	}
</style>
<Layout>
	<div class="wrapper">

	<Image src={heroImg} alt="Portert Hani" class="hero-img"/>
	</div>

	<script>
		if (window.netlifyIdentity) {
			window.netlifyIdentity.on("init", (user) => {
				if (!user) {
					window.netlifyIdentity.on("login", () => {
						document.location.href = "/admin/";
					});
				}
			});
		}
	</script>
</Layout>
