---
import Layout from "../layouts/Layout.astro";
import { Image } from 'astro:assets';
import heroImg from "../assets/Na_Główna_.png"
---
<style lang="scss">
	body{
		overflow: hidden;
	}
	.wrapper{
		height: 100vh;
		display: grid;
		place-items: center;
		width: 100%;
	}
	.hero-img{
		max-width: 600px;
		height: auto;
		width: 100%;
		object-fit: contain;
	}
</style>
<Layout>
	<div class="wrapper">

	<Image src={heroImg} alt="Portert Hani" class="hero-img"/>
	</div>
</Layout>